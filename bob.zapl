
mod Bob do
  def has_ending(i: String, s: String): Boolean = i::reverse::contains(s)

  def hey(input: String): Any = cond do
    has_ending(input, "?") => "Ok."
    has_ending(input, "!") => "Leave me alone!"
    has_ending(input, "!?") => "Relax, I know what I am doing."
    _ => "Whatever."
  end
end

println(Bob::hey("yo we caught a really big fish!"))